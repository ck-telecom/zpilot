/dts-v1/;
#include <st/f1/stm32f103Xb.dtsi>
#include <st/f1/stm32f103c(8-b)tx-pinctrl.dtsi>

/ {
	model = "kite";
	compatible = "kite";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		//zephyr,code-partition = &slot0_partition;
	};

	leds {
		compatible = "gpio-leds";
		green_led_1: led_1 {
			gpios = <&gpioa 5 GPIO_ACTIVE_HIGH>;
			label = "User LD1";
		};
		green_led_2: led_2 {
			gpios = <&gpioa 4 GPIO_ACTIVE_HIGH>;
			label = "User LD2";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button {
			label = "User";
			gpios = <&gpiob 2 GPIO_ACTIVE_LOW>;
		};
	};

	aliases {
		led0 = &green_led_1;
		led2 = &green_led_2;
		sw0 = &user_button;
		pwm-servo = &pwm3;
	};
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(8)>;
	status = "okay";
};

&pll {
	mul = <9>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(72)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <2>;
	apb2-prescaler = <1>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
	current-speed = <115200>;
		status = "okay";
};

&usart2 {
	pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
	current-speed = <115200>;
	status = "okay";
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pb10 &usart3_rx_pb11>;
	current-speed = <115200>;
};

&i2c1 {
	pinctrl-0 = <&i2c1_scl_pb6 &i2c1_sda_pb7>;
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;

	lsm303dlhc_magn: lsm303dlhc_magn@1e {
		compatible = "st,lsm303dlhc-magn";
		reg = <0x1E>;
		label = "MAGNETOMETER";
		// irq-gpios = <&gpioc 14 GPIO_ACTIVE_LOW>;
	};

	lsm303dlh_accel: lsm303dlh_accel@18 {
		compatible = "st,lsm303dlh-accel";
		reg = <0x18>;
		label = "ACCELEROMETER";
		irq-gpios = <&gpioc 13 GPIO_ACTIVE_LOW>;
	};

	bmp085: bmp085@77 {
		compatible = "bosch,bmp085";
		reg = <0x77>;
		label = "BAROMETER";
		irq-gpios = <&gpioc 15 GPIO_ACTIVE_LOW>;
	};
};

&spi1 {
	pinctrl-0 = <&spi1_nss_master_pa15 &spi1_sck_master_pb3
			&spi1_miso_master_pb4 &spi1_mosi_master_pb5>;
	status = "okay";
	cs-gpios = <&gpioa 15 GPIO_ACTIVE_LOW>;

	l3g4200d: l3g4200d@0 {
		compatible = "st,l3g4200d";
		label = "GYROSCOPE";
		spi-max-frequency = <8000000>;
		reg = <0>;

		irq-gpios = <&gpiob 12 GPIO_ACTIVE_LOW>;
	};
};

&timers2 {
	status = "okay";

	pwm2: pwm {
		status = "okay";
		pinctrl-0 = <&tim2_ch1_pwm_pa0 &tim2_ch2_pwm_pa1 &tim2_ch3_pwm_pa2 &tim2_ch4_pwm_pa3>;
	};
};

&timers3 {
	status = "okay";

	pwm3: pwm {
		status = "okay";
		pinctrl-0 = <&tim3_ch1_pwm_pa6 &tim3_ch2_pwm_pa7 &tim3_ch3_pwm_pb0 &tim3_ch4_pwm_pb1>;
	};
};

&timers4 {
	status = "okay";

	pwm4: pwm {
		status = "okay";
		pinctrl-0 = <&tim4_ch3_pwm_pb8 &tim4_ch4_pwm_pb9>;
	};
};

&iwdg {
	status = "okay";
};

&adc1 {
	pinctrl-0 = <&adc1_in0_pa0>;
	status = "okay";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Set 2KB of storage at the end of 128KB flash */
		storage_partition: partition@1f800 {
			label = "storage";
			reg = <0x0001f800 0x00000800>;
		};
	};
};
